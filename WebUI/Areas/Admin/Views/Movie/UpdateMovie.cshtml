@model DataAccess.Entity.Movie
@{
    ViewData["Title"] = "UpdateMovie";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="UpdateMovie" asp-controller="Movie" method="post">
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
        </div>
        <span asp-validation-for="MovieName" class="text-danger"></span>
        <input asp-for="MovieName" class="form-control" />
    </div> <!-- form-group// -->
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <span asp-validation-for="Duration" class="text-danger"></span>
        <input asp-for="Duration" class="form-control" />
    </div>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <span asp-validation-for="Rank" class="text-danger"></span>
        <input asp-for="Rank" class="form-control" />
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block"> Güncelle  </button>
    </div> <!-- form-group// -->
</form>

