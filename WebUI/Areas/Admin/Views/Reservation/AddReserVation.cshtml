@model DataAccess.Entity.Reservation
@{
    ViewData["Title"] = "AddReserVation";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="AddReservation" asp-controller="Reservation" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">İzleyici Adı</label>
        <input asp-for="AppUser.FirstName" type="text" class="form-control" placeholder="izleyici Adı Giriniz" >
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Film Adı</label>
        <input asp-for="Movie.MovieName" type="text" class="form-control" placeholder="Film adı giriniz" >
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Salon</label>
        <input asp-for="Saloon.SaloonName" type="text" class="form-control" placeholder="salon Giriniz">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Oturum</label>
        <input asp-for="Session.SessionTime" type="text" class="form-control" placeholder="oturum Giriniz">
    </div>
   
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
