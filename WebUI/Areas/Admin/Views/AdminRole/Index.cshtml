@model IEnumerable<IdentityRole>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <h1>Rrole Index</h1>



    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <h2>Role Listesi</h2>
                </div>
                <div class="col-md-6 text-right">

                    <a asp-action="AddRole" asp-controller="AdminRole" type="submit" class="btn btn-primary">Ekle</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Role Name</th>
                        <th>Users</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                    <tr>

                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>@role.Name</td>
                        <td identity-role=""> <a asp-action="DeleteRole" asp-controller="AdminRole" asp-route-id="@role.Id" type="submit" class="btn btn-danger">Sil</a></td>
                        <td> <a asp-action="UpdateRole" asp-controller="AdminRole" asp-route-id="@role.Id" type="submit" class="btn btn-warning">Güncelle</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

