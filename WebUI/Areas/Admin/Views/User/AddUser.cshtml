@model DataAccess.Entity.User
@{
    ViewData["Title"] = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="AddUser" asp-controller="User" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">İsim</label>
        <input asp-for="FirstName" type="text" class="form-control" placeholder="Ad Giriniz">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Soyisim</label>
        <input asp-for="LastName" type="text" class="form-control" placeholder="Soyad Giriniz">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Cinsiyet</label>
        <input asp-for="Gender" type="text" class="form-control" placeholder="Cinsiyet">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Kullanıcı adı</label>
        <input asp-for="UserName" type="text" class="form-control" placeholder="Kullanıcı Adı Giriniz">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Mail</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Mail Giriniz">
    </div>
    <div class="form-group form-check">
        <input asp-for="IsStudent" type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">öğrenci misiniz?</label>
    </div>


    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
