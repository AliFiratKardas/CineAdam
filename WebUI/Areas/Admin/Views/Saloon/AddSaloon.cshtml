@model DataAccess.Entity.Saloon 
@{
    ViewData["Title"] = "AddSaloon";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="AddSaloon" asp-controller="Saloon" method="post">

    <div class="form-group">
        <label for="exampleInputEmail1">İlk Hafta</label>
        <input asp-for="SaloonName" type="text" class="form-control" placeholder="Salon Adı Giriniz">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Son Hafta</label>
        <input asp-for="Capacity" type="number" class="form-control" placeholder="Kapasite Giriniz">
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
