@model List<DataAccess.Entity.Week>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
       <div class="row">
           <div class="col-md-6">
               <h2>Haftalar</h2>
           </div>
           <div class="col-md-6 text-right">
              
               <a asp-action="AddWeek" asp-controller="Week" type="submit" class="btn btn-primary">Ekle</a>
           </div>
       </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>İlk hafta</th>
                    <th>Son hafta</th>
                    <th>Oluşturma Tarihi</th>
                    <th>aktif mi?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var week in Model)
                {
                <tr>
                    <td>@week.Id</td>
                    <td>@week.FirstDay</td>
                    <td>@week.LastDay</td>
                    <td>@week.CreatedDate</td>
                    <td>
                        @{
                            if (week.IsActive)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Pasif</span>
                            }
                        }
                    </td><!--ID Gönderilecek-->
                    <td> <a asp-action="DeleteWeek" asp-controller="Week" asp-route-id="@week.Id" type="submit" class="btn btn-danger">Sil</a></td>
                    <td> <a asp-action="UpdateWeek" asp-controller="Week" asp-route-id="@week.Id" type="submit" class="btn btn-warning">Güncelle</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
